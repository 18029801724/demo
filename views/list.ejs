<% include common/header.ejs %>
    <h1><%= title %></h1>


<table class="table table-striped">
  <tr>
    <th>_id</th>
    <th>作者</th>
    <th>标题</th>
    <th>内容</th>
    <th>操作</th>
  </tr>

    <% list.forEach(function( list ){ %>

  <tr>
    <td><%=list._id%></td>
    <td><a href="/user/<%=list.author._id%>"><%=list.author.name%></a></td>
    <td><a href="/view/<%=list._id%>"><%=list.title%></a></td>
    <td><%=list.content%></td>
    <td><a href="/list/<%=list._id%>/edit">修改</a></td>
  </tr>
  <% }); %>
  
  

</table>


    <script type="text/javascript" >
    $('#list').addClass('active')

    </script>

